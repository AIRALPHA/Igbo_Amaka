<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    tools:context=".HomeFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:textStyle="bold"
        android:fontFamily="@font/lato_regular"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Hey, Chisom">

    </TextView>

    <TextView
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_regular"
        android:text="Welcome back"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="78dp">
    </TextView>

    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="30dp"
            android:layout_gravity="center"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            android:layout_width="320dp"
            android:layout_height="140dp"
            tools:layout_editor_absoluteX="215dp"
            tools:layout_editor_absoluteY="165dp" >

            <ImageView
                android:layout_width="350dp"
                android:scaleType="centerCrop"
                android:layout_height="wrap_content"
                android:src="@drawable/igbo_splash_screen">
            </ImageView>


        </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <com.google.android.material.card.MaterialCardView
        android:focusable="true"
        android:id="@+id/numbers_card"
        android:clickable="true"
        app:rippleColor="@color/white_colour"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="@color/orange"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        android:layout_width="150dp"
        android:layout_height="140dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="166dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NUMBERS"
            android:layout_gravity="center"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/white_colour">

        </TextView>

        <View
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/endview_background"
            android:layout_gravity="bottom|right">

        </View>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:clickable="true"
        app:rippleColor="@color/white_colour"
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        android:layout_width="150dp"
        android:layout_height="140dp"
        tools:layout_editor_absoluteX="215dp"
        tools:layout_editor_absoluteY="165dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALPHABETS"
            android:layout_gravity="center"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/white_colour">

        </TextView>

        <View
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/endview_background"
            android:layout_gravity="bottom|right">

        </View>

    </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:elevation="60dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <com.google.android.material.card.MaterialCardView
        android:clickable="true"
        app:rippleColor="@color/white_colour"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="@color/yellow"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        android:layout_width="150dp"
        android:layout_height="140dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="361dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANIMALS"
            android:layout_gravity="center"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/white_colour">

        </TextView>

        <View
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/endview_background"
            android:layout_gravity="bottom|right">

        </View>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:clickable="true"
        app:rippleColor="@color/white_colour"
        app:cardBackgroundColor="@color/orange"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        android:layout_width="150dp"
        android:layout_height="140dp"
        tools:layout_editor_absoluteX="215dp"
        tools:layout_editor_absoluteY="361dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SENTENCES"
            android:layout_gravity="center"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/white_colour">

        </TextView>

        <View
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/endview_background"
            android:layout_gravity="bottom|right">

        </View>
    </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:elevation="60dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/colours_card"
            app:rippleColor="@color/white_colour"
            android:layout_marginRight="20dp"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            android:layout_width="150dp"
            android:layout_height="140dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="361dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COLOURS"
                android:layout_gravity="center"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/white_colour">

            </TextView>

            <View
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/endview_background"
                android:layout_gravity="bottom|right">

            </View>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:clickable="true"
            app:rippleColor="@color/white_colour"
            app:cardBackgroundColor="@color/yellow"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            android:layout_width="150dp"
            android:layout_height="140dp"
            tools:layout_editor_absoluteX="215dp"
            tools:layout_editor_absoluteY="361dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOUSE-HOLD"
                android:layout_gravity="center"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/white_colour">

            </TextView>

            <View
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/endview_background"
                android:layout_gravity="bottom|right">

            </View>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <TextView
        android:textStyle="bold"
        android:fontFamily="@font/lato_regular"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Recent Activity">
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>




</LinearLayout>

</ScrollView>