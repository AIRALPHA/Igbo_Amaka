<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    android:orientation="vertical"
    tools:context=".HomeFragment">


    <TextView
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:text="Welcome!"
            android:textSize="35sp"
            android:textColor="@color/white_colour"
            android:fontFamily="@font/lato_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:textSize="25sp"
            android:textColor="@color/white_colour"
            android:fontFamily="@font/lato_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kedu ka á»‹ mere?">

        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:layout_marginTop="40dp"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:hint="Search"
            android:id="@+id/search_edit_text"
            android:paddingLeft="20dp"
            android:background="@drawable/bg_edit_text">

        </EditText>

        <com.google.android.material.button.MaterialButton
            app:iconSize="20dp"
            app:icon="@drawable/ic_baseline_search_24"
            android:layout_marginLeft="15dp"
            app:cornerRadius="15dp"
            android:layout_marginTop="34dp"
           android:layout_toRightOf="@id/search_edit_text"
            android:backgroundTint="@color/pale_yellow"
            android:layout_width="50dp"
            android:layout_height="60dp">


        </com.google.android.material.button.MaterialButton>

        </RelativeLayout>

<!--    android:layoutAnimation="@anim/layout_animation_slide_from_buttom"-->



    <GridLayout
        android:padding="20dp"
        android:rowCount="2"
        android:columnCount="3"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/bg_menu"
        android:layout_marginTop="41dp">



        <com.google.android.material.card.MaterialCardView
                android:layout_margin="10dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:focusable="true"
                android:id="@+id/numbers_card"
                android:clickable="true"
                app:rippleColor="@color/white_colour"
                app:cardBackgroundColor="@color/pink_red"
                app:cardCornerRadius="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Numbers"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/white_colour">
                </TextView>

                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/endview_background"
                    android:layout_gravity="bottom|right">
                </View>
            </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:focusable="true"
            android:id="@+id/alphabet_card"
            android:clickable="true"
            app:rippleColor="@color/white_colour"
            app:cardBackgroundColor="@color/orange_pink"
            app:cardCornerRadius="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alphabets"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/white_colour">
            </TextView>

            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/endview_background"
                android:layout_gravity="bottom|right">
            </View>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:focusable="true"
            android:id="@+id/animals_card"
            android:clickable="true"
            app:rippleColor="@color/white_colour"
            app:cardBackgroundColor="@color/pale_yellow"
            app:cardCornerRadius="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Animals"
                android:layout_gravity="center"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/white_colour">
            </TextView>

            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/endview_background"
                android:layout_gravity="bottom|right">
            </View>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:focusable="true"
            android:id="@+id/sentences_card"
            android:clickable="true"
            app:rippleColor="@color/white_colour"
            app:cardBackgroundColor="@color/yellow_orange"
            app:cardCornerRadius="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sentences"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/white_colour">
            </TextView>

            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/endview_background"
                android:layout_gravity="bottom|right">
            </View>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:focusable="true"
            android:id="@+id/colours_card"
            android:clickable="true"
            app:rippleColor="@color/white_colour"
            app:cardBackgroundColor="@color/purple"
            app:cardCornerRadius="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Colours"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/white_colour">
            </TextView>

            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/endview_background"
                android:layout_gravity="bottom|right">
            </View>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:focusable="true"
            android:id="@+id/household_card"
            android:clickable="true"
            app:rippleColor="@color/white_colour"
            app:cardBackgroundColor="@color/pink_red"
            app:cardCornerRadius="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="House-Hold"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/white_colour">
            </TextView>

            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/endview_background"
                android:layout_gravity="bottom|right">
            </View>
        </com.google.android.material.card.MaterialCardView>










    </GridLayout>



</LinearLayout>