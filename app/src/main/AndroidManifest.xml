<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.igboamaka">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_igbo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_igbo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:parentActivityName=".MainActivity"
            android:theme="@style/Activities"
            android:name=".family.FamilyActivity"></activity>
        <activity
            android:name=".animals.AnimalActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Activities"></activity>
        <activity
            android:name=".alphabets.AlphabetsActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Activities"></activity>
        <activity
            android:name=".colors.ColoursActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Activities"></activity>
        <activity
            android:name=".numbers.NumbersActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Activities"></activity>
        <activity
            android:name=".SplashScreen"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>